<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pillbox.Views.MainViews.DetailsPage" Title="{Binding Title}">
    <ContentPage.Content>
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ScrollView Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                    <StackLayout>



                    </StackLayout>
                </ScrollView>
                <Button Grid.Row="1" Grid.Column="0" Text="Удалить" FontSize="Small" FontAttributes="Bold" TextColor="White"
                        BackgroundColor="#13bd13" BorderRadius="15" HorizontalOptions="Center" VerticalOptions="End"
                    WidthRequest="175"/>
                <Button Grid.Row="1" Grid.Column="1" Text="Обновить" FontSize="Small" FontAttributes="Bold" TextColor="White"
                        BackgroundColor="#13bd13" BorderRadius="15" HorizontalOptions="Center" VerticalOptions="End"
                    WidthRequest="175"/>
            </Grid>
        </ContentPage.Content>
</ContentPage>