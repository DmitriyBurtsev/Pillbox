       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local1="clr-namespace:Pillbox.Views.MainViews"
       xmlns:local2="clr-namespace:Pillbox.Views.AdditionView"

       Title="Pillbox"
       x:Class="Pillbox.AppShell">



    <Shell.TabBarBackgroundColor>#00a500</Shell.TabBarBackgroundColor>
    <Shell.TabBarUnselectedColor>#007800</Shell.TabBarUnselectedColor>
    <Shell.TabBarTitleColor>white</Shell.TabBarTitleColor>
    <Shell.BackgroundColor>#00a500</Shell.BackgroundColor>
    

    <TabBar>
        <!--<ShellContent Title="Пилюля" Icon="pills.png" ContentTemplate="{DataTemplate local:MedicineView}" />-->
        <ShellContent Title="Мои лекарства" Icon="box.png" ContentTemplate="{DataTemplate local1:MedPage}" />
